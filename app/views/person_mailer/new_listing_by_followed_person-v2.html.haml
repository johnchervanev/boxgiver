%tr
  %td.person-name
    %h1= t("emails.new_comment_v2.headline", name: PersonViewUtils.person_display_name_for_type(@recipient, 'first_name_only'))

%tr
  %td.email-listings
    %table
      %tbody
        = render :partial => "community_mailer/community_update_listing-v2", :locals => { :listing => @listing }

%tr
  %td
    = render :partial => "action_button-v2", :locals => { :text => t(".view_listing", :scope => @translate_scope), :url => @listing_url}

%tr
  %td.email-content
    %p.email-action-help
      = t(".you_are_receiving_this_because", :scope => @translate_scope, :author_name => @author_name)
