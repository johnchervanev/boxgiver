<div class='stripe-payment-form'>
  <div class='form-group'>
    <label class='top-label' for='card-email'> Email </label>
    <input type="text" name='card_email' value="<%= @current_user.primary_email.address %>" placeholder="Email" id='card-email' required>
  </div>
  <div class='form-group'>
    <label for="card-element" class="top-label">
      Payment Information
    </label>
    <div id='card-element'>
    </div>
    <label class="hidden" id="card-errors" role="alert"></label>
    <div style="text-align: right">
      <%= image_tag('cards.jpg', style: 'max-width: 175px; margin-top: 7px;') %>
    </div>
  </div>
  <div class='form-group'>
    <label class='top-label' for='card-name'> Name on Card </label>
    <input type="text" name='card_name' value="<%= @current_user.full_name %>" id='card-name' placeholder="Card holder name" required>
  </div>
  <div class='form-group'>
    <label for="card-country" class='top-label'> Country or Region </label>
    <div class='input-group'>
      <input type="text" maxlength="2" name='card_country' id='card-country' placeholder="Two-letter country code" required>
      <input type="text" name='card_region' id='card-region' placeholder="Region or state" required>
    </div>
  </div>
</div>
