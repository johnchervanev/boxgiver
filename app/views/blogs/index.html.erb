<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<div class='row'>
  <% @blogs.each do |blog| %>
    <div class="col-sm-6 col-md-4 mb-md-5 mb-5">
      <div class='blog-post-item'>
        <div class='header-image' style="background-image: url('<%= image_path(blog.image) %>')">

        </div>
        <div class='details'>
          <h2> <%= blog.title.truncate(48) %> </h2>
          <p>
            <%= blog.content.truncate(98).html_safe %>
          </p>
          <a href='/blogs/<%= blog.slug %>' class='read-more'> Read more... </a>
        </div>
        <div class='author'>
          <div class='author-avatar'>
            <%= image_tag(blog.avatar_thumb) %>
          </div>
          <div class='author-bio'>
            <div class='name'>
              <%= blog.author.username %>
            </div>
            <div class='ext-info clearfix'>
              <span class='float-left'> <%= blog.minutes%> min read </span>
              <span class='float-right'> <%= blog.created_at.strftime("%B #{blog.created_at.day.ordinalize}, %Y") %> </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

