- content_for :title do
  = t('admin2.sidebar.seo.profile_pages')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.seo.profile_pages')

= form_for @current_community, url: update_profile_page_admin2_seo_profile_pages_path, html: { class: %i[content-card-section-container] }, method: :patch do |form|
  %section.content-card-section
    %h2
      = t('admin2.profile_pages.title')
    %p.ingress
      = t('admin2.profile_pages.title_info_text', url: 'https://help.sharetribe.com/en/articles/2643885').html_safe

    .content-card-section-form.margin-form
      - if @customizations.size == 1
        = render 'one_language', form: form, customization: @customizations.first
      - else
        = render 'many_languages', form: form, customizations: @customizations

  .content-card-terminal.without-margin
    = button_tag t('admin2.save_changes'), class: %i[btn btn-primary]
