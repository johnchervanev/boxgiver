          </div>
          <div class="col-md-6 m-reset-padding">
            <div class='earning-content' style="background-image: url('<%= community_context[:earning_potential_image] %>')"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
  <% # Basic styling %>
  <%= styles %>

  <% # Styles from section partials. E.g. styles that need marketplace color %>
  <%= yield :hero_css %>
  <%= yield :video_css %>
  <%= yield :locations_css %>
</style>

<%= yield :javascript %>

<%= render 'layouts/custom_footer', c: community_context %>
<% asset_host = local_assigns.key?(:asset_host) ? asset_host : nil %>
<%= stylesheet_link_tag asset_path('app-bundle', type: :stylesheet, host: asset_host) %>
<%= javascript_include_tag asset_path('vendor-bundle', type: :javascript, host: asset_host) %>
<%= javascript_include_tag asset_path('app-bundle', type: :javascript, host: asset_host) %>
<%= javascript_include_tag asset_path('landing', type: :javascript, host: asset_host) %>
<%= render partial: "topbar",
           locals: { props: topbar[:props],
                     marketplace_context: topbar[:marketplace_context],
                     props_endpoint: topbar[:props_endpoint],
                     container_id: "topbar-placeholder" } %>
<%= render 'layouts/cookies' %>
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', (event) => {
        setTimeout(function () {
            var element = document.getElementById("landing-header");
            element.classList.remove("pre-loading");
        }, 300);
    })
</script>
</body>
</html>
