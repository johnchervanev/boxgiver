<div class="section">
  <div class="container">
    <div class="d-flex justify-content-between">
      <h2 class="section-header dynamic-item-header">Popular Categories</h2>
      <a class="view-all-button" href="/s">View All</a>
    </div>
    <div class="row m-0 list" style="margin-left: -15px !important; margin-right: -15px !important;">
      <% @popular_categories.each do |category| %>
        <div class="col-lg-3 col-md-6 col-sm-12">
          <a class="list-item-card text-decoration-none" href="/s?category=<%= category.url %>">
            <div class="list-item-card-img" style="background-image: url('<%= category.image ? category.image : asset_path('no_image_available.jpg') %>')"></div>
            <div class="list-item-card-body">
              <p class="list-item-card-title"><%= category.display_name(locale) %></p>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
