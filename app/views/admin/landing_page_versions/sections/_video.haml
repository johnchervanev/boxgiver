- content_for :javascript do
  ST.LandingPageSectionEditor.initForm();

= form.hidden_field :previous_id
= form.hidden_field :kind

.row
  .col-12
    = form.label :id
    = form.text_field :id, disabled: presenter.section.persisted?, required: true
    - if presenter.id_error?
      %label.error= t("errors.messages.section_with_this_id_already_exists")
.row
  .col-12
    = form.label :youtube_video_id
    = form.text_field :youtube_video_id, required: true

.row
  .col-12
    %label= t(".autoplay")
    %label
      = form.radio_button :autoplay, false
      = t(".autoplay_no")
    %label
      = form.radio_button :autoplay, LandingPageVersion::Section::Video::AUTOPLAY_YES
      = t(".autoplay_yes")
    %label
      = form.radio_button :autoplay, LandingPageVersion::Section::Video::AUTOPLAY_MUTED
      = t(".autoplay_muted")

.row
  .col-12
    = form.label :text
    = form.text_field :text
