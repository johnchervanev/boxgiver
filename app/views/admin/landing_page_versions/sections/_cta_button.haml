.row
  .col-12
    %h3= t(".cta_button")

.row
  .col-12
    %label
      = form.check_box :cta_enabled, class: 'cta-select'
      = t(".cta_enabled")

.row.cta-enabled
  .col-12
    = form.label :button_title
    = form.text_field :button_title, required: true

.row.cta-enabled
  .col-12
    = form.label :button_path_string
    = form.text_field :button_path_string, required: true, url: true
