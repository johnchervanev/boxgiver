<% content_for :title_header do %>
  <h1>
    <%= t("layouts.admin.admin") %>
    <%= "-" %>
    <%= t("admin.blogs.index.blog_post") %>
  </h1>
<% end %>
<%= render :partial => "admin/left_hand_navigation", :locals => { :links => admin_links_for(@current_community) } %>

<div class="left-navi-section">
  <div id="blog-details">
    <div class="blog-title">
      <h1><%= @blog.title %></h1>
    </div>
    <div class="blog-author">
      <div class="author-avatar">
        <%= image_tag(@blog.avatar_thumb) %>
      </div>
      <div class="author-name">
        <%= @blog.author.username %>
        <div class="blog-info">
          <%= @blog.minutes%> min read &bull; <%= @blog.created_at.strftime("%B #{@blog.created_at.day.ordinalize}, %Y") %>
        </div>
      </div>
    </div>
    <div class="blog-image" style=" background-image: url('<%= image_path(@blog.image) %>');"></div>
    <div class="blog-content">
      <%= @blog.content.html_safe %>
    </div>
  </div>
</div>


