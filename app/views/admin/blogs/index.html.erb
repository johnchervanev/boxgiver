<% content_for :title_header do %>
  <h1>
    <%= t("layouts.admin.admin") %>
    <%= "-" %>
    <%= t("admin.blogs.index.blog_post") %>
  </h1>
<% end %>
  <%= render :partial => "admin/left_hand_navigation", :locals => { :links => admin_links_for(@current_community) } %>

  <div class="left-navi-section">
    <div class="row" style="padding-top: 25px; float: right;">
      <div class="col-12">
        <%= link_to t("admin.blogs.index.new_blog"), new_admin_blog_path %>
      </div>
    </div>
    <table id="admin_listings">
      <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Image</th>
        <th>Minutes to read</th>
        <th>Published</th>
        <th>Created at</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td>
            <%= link_to admin_blog_path(blog) do %>
              <%= blog.title.truncate(20) %>
            <% end %>
          </td>
          <td><%= blog.author.username %></td>
          <td><%= image_tag(blog.image.url, width: 75) %></td>
          <td><%= blog.minutes %> min.</td>
          <td><%= blog.published ? "Yes":"No" %></td>
          <td><%= blog.created_at.strftime("%b #{blog.created_at.day.ordinalize}, %Y") %></td>
          <td>
            <%= link_to edit_admin_blog_path(blog) do %>
              <i class="icon-edit icon-fix"></i>
            <% end %>
            <%= link_to admin_blog_path(blog), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="icon-remove icon-fix"></i>
              <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>


