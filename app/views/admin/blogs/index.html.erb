<% content_for :title_header do %>
  <h1>
    <%= t("layouts.admin.admin") %>
    <%= "-" %>
    <%= t("admin.blogs.index.blog_post") %>
  </h1>
<% end %>
  <%= render :partial => "admin/left_hand_navigation", :locals => { :links => admin_links_for(@current_community) } %>

  <div class="left-navi-section">
    <table id="admin_listings">
      <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
        <th>image</th>
        <th>Minutes</th>
        <th>Published</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title.truncate(10) %></td>
          <td><%= blog.author.username %></td>
          <td><%= blog.content.truncate(23) %></td>
          <td><%= image_tag(blog.image.url, width: 75) %></td>
          <td><%= blog.minutes %></td>
          <td><%= blog.published %></td>
          <td><%= link_to "Edit", edit_admin_blog_path(blog) %></td>
          <td><%= link_to "Delete", admin_blog_path(blog), method: :delete,
                          data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="row" style="padding-top: 25px;">
      <div class="col-12">
        <%= link_to t("admin.blogs.index.new_blog"), new_admin_blog_path%>
      </div>
    </div>

  </div>


