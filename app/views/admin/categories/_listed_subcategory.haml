.row.category-row.sub-category-row{:id => "subcategory-#{subcategory.display_name(I18n.locale).squish.downcase.tr(" ","_")}", :data => {:id => subcategory.id } }
  .col-5.listed-category-col
    .subcategory-label
      = subcategory.display_name(I18n.locale)
  .col-5.listed-category-col
    = image_tag subcategory.image.url, size: 70 if subcategory.image.present?
  .col-2.listed-category-col
    = render :partial => "category_action_buttons", :locals => {category: subcategory, category_count: category_count}
